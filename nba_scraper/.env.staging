# Staging Environment Configuration
ENVIRONMENT=staging
DEBUG=false

# Database - Staging PostgreSQL with SSL
DATABASE_URL=postgresql+asyncpg://nba_staging:staging_password@staging-db.company.com:5432/nba_scraper_staging
DATABASE_POOL_SIZE=15
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=45
DATABASE_SSL_MODE=require

# Logging - JSON logging for staging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/nba_scraper/staging.log

# Caching - Redis for testing distributed cache
CACHE_DIR=/tmp/nba_scraper_staging
CACHE_REDIS_URL=redis://staging-redis:6379/1
CACHE_REDIS_TTL=7200
CACHE_ENABLE_HTTP_CACHE=true
CACHE_ENABLE_QUERY_CACHE=true

# Monitoring - Full monitoring for testing
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=9090
MONITORING_ENABLE_HEALTH_CHECKS=true
MONITORING_HEALTH_CHECK_PORT=8080
MONITORING_ENABLE_TRACING=true
MONITORING_TRACING_SAMPLE_RATE=0.5

# API Keys - Staging services
# API_SENTRY_DSN=https://staging-sentry-dsn@sentry.io/staging-project
# API_SLACK_WEBHOOK_URL=https://hooks.slack.com/staging/webhook/url

# Pipeline - Balanced performance
MAX_CONCURRENT_REQUESTS=6
BACKFILL_CHUNK_SIZE=15
CHECKPOINT_ENABLED=true

# Rate limiting - Moderate for staging
REQUESTS_PER_MIN=50
RETRY_MAX=4

# Security - Staging hosts
ALLOWED_HOSTS=staging.company.com,staging-api.company.com
CORS_ORIGINS=https://staging-dashboard.company.com

# Feature flags - Test experimental features
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_ASYNC_PROCESSING=true