# Development Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database - Local PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nba_scraper_dev
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Logging - Debug level for development
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Caching - Local only
CACHE_DIR=.cache/dev
CACHE_ENABLE_HTTP_CACHE=true

# Monitoring - Basic monitoring only
MONITORING_ENABLE_METRICS=false
MONITORING_ENABLE_HEALTH_CHECKS=true
MONITORING_ENABLE_TRACING=false

# Pipeline - Smaller chunks for faster testing
MAX_CONCURRENT_REQUESTS=3
BACKFILL_CHUNK_SIZE=5

# Rate limiting - More lenient for development
REQUESTS_PER_MIN=60

# Feature flags - Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=true